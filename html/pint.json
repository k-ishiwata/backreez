{
    "preset": "laravel",
    "rules": {
        "concat_space": false,
        "binary_operator_spaces": {
            "default" : "single_space",
            "operators": {
                "=>" : null,
                "=" : null
            }
        },
        "trailing_comma_in_multiline": {
            "elements": []
        },
        "no_multiline_whitespace_around_double_arrow": false,
        "blank_line_before_statement": {
            "statements": [
                "declare",
                "try"
            ]
        },
        "no_superfluous_phpdoc_tags": false
    }
}
